---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Cert from '../../components/Cert.astro';
import '../../styles/global.css';
---

<BaseLayout>
     <div class="flex-container hero">
            <div class="overlay">
                <div class="content">
                    <h1 class="flex-item">Electricians</h1>
                    <h2>Based in Newcastle Upon Tyne</h2>   
                    <div class="usp-list">
                        <div class="usp-item">
                            <div><img src="/check-mark.png" alt=""></div>
                            <div>Family run business</div>
                        </div>
                        <div class="usp-item">
                            <div><img src="/check-mark.png" alt=""></div>
                            <div>We are available 24/7</div>
                        </div>
                        <div class="usp-item">
                            <div><img src="/check-mark.png" alt=""></div>
                            <div>All our electricians are experienced & certified</div>
                        </div>
                        <div class="usp-item">
                            <div><img src="/check-mark.png" alt=""></div>
                            <div>Skilled in all electrical jobs</div>
                        </div>
                    </div>
                    <div class="button-wrapper">
                        <div class="flex-item"><a href="tel:07519662153"><button class='cta-button'><img src="/phone.png" alt="">07519662153</button></a></div>         
                        <div class="flex-item"><a href="/contactus"><button class='cta-button'>Contact Us</button></a></div>         
                    </div>
                </div>
            </div>    
        </div>
    <div class="services-wrapper">
    <h2>What we offer</h2>
    <div class="flex-container">
        <div class="flex-item">
            <img src="/wire.png" alt="wire icon">
            <h3>Rewire</h3>
        </div>
        <div class="flex-item">
            <img src="/upgrade.png" alt="upgrade icon">
            <h3>Upgrades</h3>
        </div>
        <div class="flex-item">
            <img src="/fuseboard.png" alt="fuse board icon">
            <h3>Fuse Board</h3>
        </div>
        <div class="flex-item">
            <img src="/light.png" alt="light icon">
            <h3>Lighting</h3>
        </div>
        <div class="flex-item">
            <img src="/socket.png" alt="socket icon">
            <h3>Sockets</h3>
        </div>
        <div class="flex-item">
            <img src="/shower.png" alt="shower icon">
            <h3>Showers</h3>
        </div>
        <div class="flex-item">
            <img src="/power.png" alt="power icon">
            <h3>Bonding</h3>
        </div>
    </div>
    </div>


    <style>
            .hero {
                background: url("/hero_background.png") no-repeat fixed center;
                height: 50vh;
                background-size: cover;
                background-attachment: scroll;
                }

            .overlay {
            background-color: rgba(128, 127, 127, 0.74);
            height: 100%;
            width: 100%;
            }

            .content {
            display: flex;
            flex-direction: column;
            justify-content: center;
            height: 100%;
            width: 20vw;
            gap: 5%;
            color: #fff;
            background-image: repeating-linear-gradient(45deg, orange,rgb(255, 204, 110));
            text-align: center;
            margin-left: 40vw;
            padding-inline: 10%;
            }

            .usp-list {
               padding: 0 20px; 
            }

            .usp-item {
                display: flex;
                flex-direction: row;
                flex-wrap: nowrap;
                gap: 1rem;
                padding-top: 3%;
                
            }

            img {
                height: 1rem;
            }

            .button-wrapper {
                display: flex;
                flex-direction: row;
                justify-content: center;
                gap: 5%;
                width: 100%;
            }

            .cta-button {
                display: flex;
                flex-direction: row;
                font-size: 1rem;
                width: fit-content;
                align-items: center;
                justify-content: center;
                width: 5rem;
                height: 5rem;
            }

            .flex-item {
                align-content: center;
            }

            .cta-button img {
                height: 2rem !important;
                padding-right: 1rem;
            }

            @media screen and (width < 800px) {
                .content {
                    width: 100%;
                    margin: 0 auto;
                    padding: 0;
                    
                }
            }

        .services-wrapper {
            text-align: center;
            padding: 2vh 0;
        }

        .services-wrapper h2 {
            margin: 5vh 0;
            font-size: 3rem;
        }

        .services-wrapper .flex-container {
            display: flex;
            flex-flow: row wrap;
            margin: 0 10%;
            justify-content: center;
            align-items: center;
            gap: 5%;
        }

        .services-wrapper .flex-item img {
            width: 100%;
            height: 10vh;
            max-width: 200px;
            display: block;
            margin: 0 auto;
        }

        .services-wrapper .flex-item:hover {
        transform: translateY(-5px);
        }

        @media screen and (width < 800px) {
            .services-wrapper h2 {
                font-size: 2.5rem;
            }

            h3 {
                font-size: 1rem;
            }

            .flex-item img {
                height: 7vh;
            }

        }

    </style>

</BaseLayout>