<div class="wrapper">
    <h1>Services</h1>
    <div class="flex-container">
        <div class="flex-item">
            <a href="/services/electrical">
                <img src="./bulb.png" alt="bulb svg">
                <h2>Electrical</h2>
            </a>
        </div>
        <div class="flex-item">
            <a href="/services/heating">
                <img src="./boiler.png" alt="boiler svg">
                <h2>Heating</h2>  
            </a>     
        </div>
        <div class="flex-item">
            <a href="/services/plumbing">
                <img src="./pipe.png" alt="pipe svg">
                <h2>Plumbing</h2>
            </a>
        </div>
        <div class="flex-item">
            <a href="/services/renewables">
                <img src="./solarpanel.png" alt="solar panel svg">
                <h2>Renewables</h2>
            </a>
        </div>
    </div>
</div>


<style>

    .wrapper {
        margin: 5% auto;
    }

    h1 {
        font-size: 3rem;
        text-align: center;
        padding-bottom: 2%;
    }

    .flex-container {
        display: flex;
        flex-flow: row wrap;
        margin: 0 10%;
        justify-content: center;
        align-items: center;
        gap: 10%;
        }

    .flex-item {
        flex-direction: column;
        justify-items: center;
        align-content: center;
        text-align: center;
        margin: 0 auto;
    }

    .flex-item img {
        height: 15vh;
    }

    .flex-item:hover {
        transform: translateY(-5px);
    }

    @media screen and (width < 800px) {
        h1 {
            font-size: 1.75rem;
        }

        .flex-item img {
            height: 12vh;
        }
        .flex-item h2 {
            font-size: 1.25rem;
        }
    }
</style>