---
import '../styles/global.css';
import Form from '../components/Form.astro';
---

<main>
    <img src="../cropped-logo.png.webp" alt="PowerHeat Team Logo" class="logo"/>
    <div class="content-wrapper">
        <a href="/contactus"><button class='cta-button'>Book A Callout</button></a>
        <div class="services-container">
            <a href="/services/electrical" class="icon-container">
                <img src="./bulb.png" alt="bulb svg">
                <h2>Electrical</h2>
            </a>

            <a href="/services/heating" class="icon-container">
                <img src="./boiler.png" alt="boiler svg">
                <h2>Heating</h2>
            </a>

            <a href="/services/plumbing" class="icon-container">
                <img src="./pipe.png" alt="pipe svg">
                <h2>Plumbing</h2>
            </a>

            <a href="/services/renewables" class="icon-container">
                <img src="./solarpanel.png" alt="solar panel svg">
                <h2>Renewables</h2>
            </a>
        </div>
        <div class="cert-container">
            <div class="cert-item">
                <img src="/Gas_safe_register.png" alt="Gas Safe Register Logo">
            </div>
            <div class="cert-item">
                <img src="/MCS-certified.png" alt="MCS Certifed Logo">  
            </div>
            <div class="cert-item">
                <img src="/NAPIT.png" alt="NAPIT Logo">
            </div>
            <div class="cert-item">
                <img src="/trust_mark.png" alt="Trust Mark Logo">
            </div>     
        </div>
    </div>
</main>

<style>

   main {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    width: 100vw;
    text-align: center;
}

.logo {
    display: block;
    height: 15vh;
    width: 100vw;
    border-bottom: 5px solid black;
    object-fit: contain;
}

.content-wrapper {
    flex: 1; /* take remaining space */
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    background-color: orange;
}

.cta-button {
    margin-top: 5rem;
    padding: 2.5rem 4rem;
    font-size: 1.5rem;
    background-color: white;
    border: 5px solid black;
}

.services-container {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    justify-items: center;
    align-items: center;
    gap: 2rem;
    padding: 2rem;
    flex: 1; /* take up space, push certs down */
}

.icon-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 20rem;
    height: 20rem;
    background-color: white;
    border-radius: 12px;
    border: solid 2px black;
    box-shadow: 0 4px 8px rgba(0,0,0,0.15);
    cursor: pointer;
    text-align: center;
    transition: all 0.3s ease;
}

.icon-container img {
    height: 12rem;
    margin-bottom: 10px;
}

.icon-container h2 {
    font-size: 2rem;
    margin: 0;
    color: #333;
}

.icon-container:hover {
    transform: translateY(-5px) scale(1.05);
    box-shadow: 0 6px 14px rgba(0,0,0,0.25);
}

.icon-container:active {
    transform: scale(0.95);
}

.cert-container {
    display: flex;
    justify-content: center;
    align-items: start;
    height: 15vh;
    gap: 2rem;
    padding: 3rem;
    border-top: 2px solid black;
    border-bottom: 2px solid black;
    background-color: white;
}


.cert-item img {
    max-height: 5vh;
    width: auto;
    object-fit: contain;
}


</style>